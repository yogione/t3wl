<h1>Listing receivers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Phone number</th>
    <th>Description</th>
    <th>Email</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @receivers.each do |receiver| %>
  <tr>
    <td><%= receiver.name %></td>
    <td><%= receiver.phone_number %></td>
    <td><%= receiver.description %></td>
    <td><%= receiver.email %></td>
    <td><%= receiver.status %></td>
    <td><%= link_to 'Show', receiver %></td>
    <td><%= link_to 'Edit', edit_receiver_path(receiver) %></td>
    <td><%= link_to 'Destroy', receiver, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

