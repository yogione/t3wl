                    <li><%=link_to "Moderate Comments", comments_path  if current_user.admin? %></li>
                  <% end %>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <% end %>
          </p>
          </ul>
        </nav>
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
                      <%= yield %>
