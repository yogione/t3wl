            <%= check_box_tag 'messages[]',message.id %>
          </td>
          <td>
            <%= message.msg_text %>
          </td>
        </tr>
      <% end %>
    </table>
    </div> <!-- lunch grid -->
    <br/>
    <div id="snackdiv" class="grid_4">
    <table>
      <tr>
        <th>
          Select
        </th>
        <th>
          Message Text
          <%=f.select 'snack_time' , Message::SNACKS,{:prompt => 'Select Snacks Time'} %>
        </th>
      </tr>
    </table>
      <% for message in Message.find(:all, :conditions => ["category = ?",'Snack']) %>
      <table>
        <tr>
          <td>
            <%= check_box_tag 'messages[]',message.id %>
          </td>
          <td>
            <%= message.msg_text %>
          </td>
        </tr>
      <% end %>
    </table>
    <br/>
    <table class="hovertable">
      <tr>
        <th>
          Select
        </th>
        <th>
          Message Text
          <%=f.select 'dinner_time' , Message::DINNER,{:prompt => 'Select Dinner Time'} %>
        </th>
      </tr>
    </table>
    <table>
      <% for message in Message.find(:all, :conditions => ["category = ?",'Dinner']) %>
        <tr>
          <td>
            <%= check_box_tag 'messages[]',message.id %>
          </td>
          <td>
            <%= message.msg_text %>
          </td>
        </tr>
      <% end %>
    </table>
    </div> <!-- snack and dinner grid -->
     <% end %>
    <div class="grid_12">
      <%=submit_tag 'Get Started! - 10 days free, then $5/month', :class => "signup_button round"%>
    </div> 
     
</div>



