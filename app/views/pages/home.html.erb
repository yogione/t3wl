<div class="grid_12">
  <h2>Send daily automatic text messages to help with weight loss</h2>
  <h2 style="color: #ff0000"><%= params['msg'] %></h2>
  <h4>Setup is as easy as 1 - 2 - 3</h4>
  <%= form_for :receiver, :url => save_receiver_data_url do |f| %>
  <%= f.error_messages %>
    <p>
      1.  Phone Number <%=f.text_field :phone_number %>
      and Name: <%=f.text_field :name %><br/>
      2. Select Time Zone: <%=time_zone_select( "receiver", "time_zone", ActiveSupport::TimeZone.us_zones, :default => "Pacific Time (US & Canada)") %> <br/>
      3. Choose messages and times
    </p>
    </div> <!-- grid_12 -->
    <div id="breakfastdiv" class="grid_4">
    <table>
      <tr>
        <th>
          Select
        </th>
        <th>
          Message Text
          <%=f.select 'breakfast_time' , Message::BREAKFAST,{:prompt => 'Select Breakfast Time'} %>
        </th>
      </tr>
      <% for message in Message.find(:all, :conditions => ["category = ?",'Breakfast']) %>
        <tr>
          <td>
            <%= check_box_tag 'messages[]',message.id %>
          </td>
          <td>
            <%= message.msg_text %>
          </td>
        </tr>
      <% end %>
    </table>
    </div> <!-- breakfast grid -->
    <br/>
    <div id="lunchdiv" class="grid_4">
    <table>
      <tr>
        <th>
          Select
        </th>
        <th>
          Message Text
          <%=f.select 'lunch_time' , Message::LUNCH,{:prompt => 'Select Lunch Time'} %>
        </th>
      </tr>
    </table>
    <table>
      <% for message in Message.find(:all, :conditions => ["category = ?",'Lunch']) %>
