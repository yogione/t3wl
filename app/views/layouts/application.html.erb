<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
     <%= link_to image_tag("t2wl_logo_words.gif",:style =>"width:100%;", :alt =>"milkeggs"), root_path %>
     <%= link_to image_tag("t2wl_logo.gif",:style =>"width:100%;", :alt =>"milkeggs"), root_path %>
    <div id="container" class="container_12">
      <%= render 'layouts/header' %>
      <div class="grid_12">
           <ul id="nav">
             <p class="welcome">
                           <li><%= link_to "Users", users_path %></li>
              <% if signed_in? %>
                  <% if false%>
                     <li><%= link_to "Retirees", retiree_path %></li>
                    <li> <%= link_to "Profile", current_user %> </li>
                    <li><%= link_to "Users", users_path %></li>
                    <li><%=link_to "Moderate Comments", comments_path  if current_user.admin? %></li>
                  <% end %>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <% end %>
            
            </p>
          </ul>
        </nav>
        </div> <!--nav div-->   
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
                      <%= yield %>
         <div class="grid_12">
         <%= render 'layouts/footer' %>
        </div>
          <br />
           <br />
      <%= debug(params) if Rails.env.development? %>
      </div> <!-- container -->
  </body>
</html>
